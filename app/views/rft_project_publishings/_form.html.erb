<div class="well">
  <%= simple_form_for(@rft_project_publishing, default_form_options) do |f| %>

  <div class="form-inputs">
          <%= f.association :request_form_type %>
          <%= f.association :entity %>
          <%= f.input :description %>
          <%= f.input :road_type %>
          <%= f.input :road_name %>
          <%= f.input :number_type %>
          <%= f.input :road_number %>
          <%= f.input :postal_code %>
          <%= f.input :town %>
          <%= f.input :province %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
</div>