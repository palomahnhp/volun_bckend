<div class="well">
  <%= simple_form_for(@address, default_form_options) do |f| %>

  <div class="form-inputs">
          <%= f.input :road_type %>
          <%= f.input :road_name %>
          <%= f.input :road_number_type %>
          <%= f.input :road_number %>
          <%= f.input :grader %>
          <%= f.input :stairs %>
          <%= f.input :floor %>
          <%= f.input :door %>
          <%= f.input :postal_code %>
          <%= f.input :town %>
          <%= f.input :province %>
          <%= f.input :country %>
          <%= f.input :ndp_code %>
          <%= f.input :local_code %>
          <%= f.input :class_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
</div>