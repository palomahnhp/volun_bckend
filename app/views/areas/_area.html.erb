<tr id="<%= dom_id(area) %>" >

  <% area.main_attributes.each do |attr_name| %>
  <td><%= show_attr(area, attr_name) %></td>
  <% end %>

  <td class="index_table-actions">
    <%= link_to_show(area) %>
    <%= link_to_edit(area) %>
<% if area.try(:archived?) %>
    <%= link_to_recover(area) %>
<% else %>
    <%= link_to_destroy(area) %>
<% end %>
  </td>
</tr>
