<% model_class = FrontpageElement %>

<div class="row" style="margin: 20px;">
  <div class="col-md-12">
    <%= link_to 'Volver a lista de elementos', frontpage_elements_path, class: 'btn btn-primary pull-left' %>
  </div>
</div>
<div class="row" style="background-color: #D9D9D9;">
  <div class="col-md-12" style="height: 400px;">
