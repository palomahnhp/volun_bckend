<div class="well">
  <%= simple_form_for(@rft_volunteer_subscribe, default_form_options) do |f| %>

  <div class="form-inputs">
          <%= f.association :request_form_type %>
          <%= f.input :name %>
          <%= f.input :first_surname %>
          <%= f.input :second_surname %>
          <%= f.input :phone_number %>
          <%= f.input :phone_number_alt %>
          <%= f.input :email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
</div>