<%= main_title(t("action.show", model: Event.model_name.human)) %>

<dl class="dl-horizontal">

  <dt><%= Event.human_attribute_name(:id) %>:</dt>
  <dd><%= @event.id %></dd>
  <dt><%= Event.human_attribute_name(:eventable_id) %>:</dt>
  <dd><%= @event.eventable %></dd>
  <dt><%= Event.human_attribute_name(:address_id) %>:</dt>
  <dd><%= @event.address_id %></dd>
  <dt><%= Event.human_attribute_name(:created_at) %>:</dt>
  <dd><%= show_simple_date(@event.created_at) %></dd>

</dl>
<% unless request.xhr? %>
<%= button_to_back %>
<%= button_to_edit(@event) %>
<% end %>