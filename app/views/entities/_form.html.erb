<div class="well">
  <%= simple_form_for(@entity, default_form_options) do |f| %>

  <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :active %>
          <%= f.association :entity_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
</div>