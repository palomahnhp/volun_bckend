<%= main_title(t("action.show", model: Entity.model_name.human)) %>

<dl class="dl-horizontal">

  <dt><%= Entity.human_attribute_name(:id) %>:</dt>
  <dd><%= @entity.id %></dd>
  <dt><%= Entity.human_attribute_name(:name) %>:</dt>
  <dd><%= @entity.name %></dd>
  <dt><%= Entity.human_attribute_name(:description) %>:</dt>
  <dd><%= @entity.description %></dd>
  <dt><%= Entity.human_attribute_name(:active) %>:</dt>
  <dd><%= t("humanize.#{@entity.active}") %></dd>
  <dt><%= Entity.human_attribute_name(:entity_type_id) %>:</dt>
  <dd><%= @entity.entity_type %></dd>
  <dt><%= Entity.human_attribute_name(:created_at) %>:</dt>
  <dd><%= show_simple_date(@entity.created_at) %></dd>

</dl>
<% unless request.xhr? %>
<%= button_to_back %>
<%= button_to_edit(@entity) %>
<% end %>