<%= main_title(t("action.show", model: Sector.model_name.human)) %>

<dl class="dl-horizontal">

  <dt><%= Sector.human_attribute_name(:id) %>:</dt>
  <dd><%= @sector.id %></dd>
  <dt><%= Sector.human_attribute_name(:name) %>:</dt>
  <dd><%= @sector.name %></dd>
  <dt><%= Sector.human_attribute_name(:active) %>:</dt>
  <dd><%= t("humanize.#{@sector.active}") %></dd>
  <dt><%= Sector.human_attribute_name(:created_at) %>:</dt>
  <dd><%= show_simple_date(@sector.created_at, format: :long) %></dd>

</dl>
<% unless request.xhr? %>
<%= button_to_back %>
<%= button_to_edit(@sector) %>
<% end %>