<tr id="<%= dom_id(frontpage_position) %>" >

  <% frontpage_position.main_attributes.each do |attr_name| %>
  <td><%= show_attr(frontpage_position, attr_name) %></td>
  <% end %>

  <td class="index_table-actions">
    <%= link_to_show(frontpage_position) %>
    <%= link_to_edit(frontpage_position) %>
<% if frontpage_position.try(:archived?) %>
    <%= link_to_recover(frontpage_position) %>
<% else %>
    <%= link_to_destroy(frontpage_position) %>
<% end %>
  </td>
</tr>
