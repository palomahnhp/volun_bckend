<tr id="<%= dom_id(user) %>" >

  <% project.main_attributes.each do |attr_name| %>
  <td><%= show_attr(user.public_send attr_name) %></td>
  <% end %>

  <td class="index_table-actions">
    <%= link_to_show(user) %>
    <%= link_to_edit(user) %>
<% if user.try(:archived?) %>
    <%= link_to_recover(user) %>
<% else %>
    <%= link_to_destroy(user) %>
<% end %>
  </td>
</tr>
