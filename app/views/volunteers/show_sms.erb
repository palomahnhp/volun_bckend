<%= main_title(t('sms')) %>

<div class="row">
	<div class="col-md-6 pull left">
		<dl class="dl-horizontal">
      <dt><%= Volunteer.model_name.human  %>: </dt>
			<dd><%= @volunteer.id %></dd>
      <dt><%= t('cell_phone') %>:</dt>
			<dd class="phone"><%= @volunteer.phone_number_alt %></dd>
    </dl>
    <button id="btn-send" class="btn btn-success"><%= t('send_sms') %></button>
	</div>
</div>

<% unless request.xhr? %>
<%= button_to_back %>
<% end %>

<script>
    $("#btn-send").click(function(){
        swal(
          "Enviado!",
          "El mensaje ha sido enviado",
          "success"
        )
    });
</script>
