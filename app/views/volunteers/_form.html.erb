<div class="well">
  <%= simple_form_for(@volunteer, default_form_options) do |f| %>

  <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :first_surname %>
          <%= f.input :second_surname %>
          <%= f.input :age %>
          <%= f.input :id_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
</div>