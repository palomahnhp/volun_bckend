<div class="well well-form">
  <%= simple_nested_form_for(@project_type_entity, default_form_options) do |f| %>

    <%= f.simple_fields_for :project do |f_project|  %>
        <%= render partial: 'projects/form_fields', locals: { f: f_project } %>
    <% end %>

    <div class="form-inputs">
      <div class="row last-row-ent well">
        <%= content_tag :h3, 'Datos especÃ­ficos del tipo de proyecto', class: 'form-subtitle' %>
        <div class="well col-md-6">
          <%= content_tag :h4, 'Datos de voluntariado', class: 'form-subtitle' %>
          <%= f.input :volunteers_profile %>
          <%= f.input :derived_volunteers_num %>
          <%= f.input :added_volunteers_num %>
          <%= f.input :activities %>
        </div>
        <div class="well col-md-6">
          <%= content_tag :h4, 'Otros datos de interes', class: 'form-subtitle' %>
          <%= f.input :request_date, as: :datepicker %>
          <%= f.input :request_description %>
          <%= f.input :agreement_date, as: :datepicker %>
          <%= f.input :sav_date, as: :datepicker %>
          <%= f.input :agreement_signed %>
          <%= f.input :prevailing %>
        </div>
      </div>
    </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success js-confirmable' %>
    <%= link_to build_icon('repeat', text: t('messages.undo_changes')), '', class: 'undo js-reloadable' %>
  </div>
  <% end %>
</div>