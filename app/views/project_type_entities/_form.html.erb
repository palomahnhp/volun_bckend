<div class="well">
  <%= simple_form_for(@project_type_entity, default_form_options) do |f| %>

    <%= f.simple_fields_for :project do |f_project|  %>
        <%= render partial: 'projects/form_fields', locals: { f: f_project } %>
    <% end %>

  <div class="form-inputs">
    <%= f.input :request_date, as: :datepicker %>
    <%= f.input :request_description %>
    <%= f.input :requested_volunteers_num %>
    <%= f.input :volunteers_profile %>
    <%= f.input :activities %>
    <%= f.input :sav_date, as: :datepicker %>
    <%= f.input :derived_volunteers_num %>
    <%= f.input :added_volunteers_num %>
    <%= f.input :agreement_signed %>
    <%= f.input :agreement_date, as: :datepicker %>
    <%= f.input :prevailing %>
    <%= f.input :project_type, disabled: true, input_html: { value: f.object.my_type_i18n } %>
    <%= f.input :project_type_id, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
</div>