<div class="well">
  <%= simple_form_for(@ent_tracking, default_form_options) do |f| %>

  <div class="form-inputs">
          <%= f.association :tracking_type %>
          <%= f.association :entity %>
          <%= f.association :manager %>
          <%= f.input :tracked_at %>
          <%= f.input :comments %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
</div>