<div class="well">
  <%= simple_form_for(@request_form, default_form_options) do |f| %>

  <div class="form-inputs">
          <%= f.association :request_type %>
          <%= f.association :user %>
          <%= f.input :status %>
          <%= f.input :status_date, as: :datepicker %>
          <%= f.association :rejection_type %>
          <%= f.association :request_reason %>
          <%= f.input :comments %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
</div>