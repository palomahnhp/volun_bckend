<%= main_title(t("action.show", model: Status.model_name.human)) %>

<dl class="dl-horizontal">

  <dt><%= Status.human_attribute_name(:id) %>:</dt>
  <dd><%= @status.id %></dd>
  <dt><%= Status.human_attribute_name(:name) %>:</dt>
  <dd><%= @status.name %></dd>
  <dt><%= Status.human_attribute_name(:active) %>:</dt>
  <dd><%= t("humanize.#{@status.active}") %></dd>
  <dt><%= Status.human_attribute_name(:created_at) %>:</dt>
  <dd><%= show_simple_date(@status.created_at) %></dd>

</dl>
<% unless request.xhr? %>
<%= button_to_back %>
<%= button_to_edit(@status) %>
<% end %>