<%= main_title(t("action.show", model: RejectionType.model_name.human)) %>

<dl class="dl-horizontal">

  <dt><%= RejectionType.human_attribute_name(:id) %>:</dt>
  <dd><%= @rejection_type.id %></dd>
  <dt><%= RejectionType.human_attribute_name(:name) %>:</dt>
  <dd><%= @rejection_type.name %></dd>
  <dt><%= RejectionType.human_attribute_name(:description) %>:</dt>
  <dd><%= @rejection_type.description %></dd>
  <dt><%= RejectionType.human_attribute_name(:active) %>:</dt>
  <dd><%= t("humanize.#{@rejection_type.active}") %></dd>
