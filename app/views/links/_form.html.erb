<div class="well">
  <%= simple_form_for(@link, default_form_options) do |f| %>

  <div class="form-inputs">
          <%= f.input :path %>
          <%= f.input :description %>
          <%= f.input :kind %>
          <%= f.association :linkable %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
</div>