<%= main_title(t("action.show", model: Link.model_name.human)) %>

<dl class="dl-horizontal">

  <dt><%= Link.human_attribute_name(:id) %>:</dt>
  <dd><%= @link.id %></dd>
  <dt><%= Link.human_attribute_name(:url) %>:</dt>
  <dd><%= @link.url %></dd>
  <dt><%= Link.human_attribute_name(:description) %>:</dt>
  <dd><%= @link.description %></dd>
  <dt><%= Link.human_attribute_name(:kind) %>:</dt>
  <dd><%= @link.kind %></dd>
  <dt><%= Link.human_attribute_name(:linkable_id) %>:</dt>
  <dd><%= @link.linkable %></dd>
