<tr id="<%= dom_id(tracking) %>" >

  <% tracking.main_attributes.each do |attr_name| %>
  <td><%= show_attr(tracking.public_send attr_name) %></td>
  <% end %>

  <td class="index_table-actions">
    <%= link_to_show(tracking) %>
    <%= link_to_edit(tracking) %>
<% if tracking.try(:archived?) %>
    <%= link_to_recover(tracking) %>
<% else %>
    <%= link_to_destroy(tracking) %>
<% end %>
  </td>
</tr>
