<tr id="<%= dom_id(nationality) %>" >

  <% nationality.main_attributes.each do |attr_name| %>
  <td><%= show_attr(nationality.public_send attr_name) %></td>
  <% end %>

  <td class="index_table-actions">
    <%= link_to_show(nationality) %>
    <%= link_to_edit(nationality) %>
<% if nationality.try(:archived?) %>
    <%= link_to_recover(nationality) %>
<% else %>
    <%= link_to_destroy(nationality) %>
<% end %>
  </td>
</tr>
