<tr id="<%= dom_id(project_type_permanent) %>" >

<% project_type_permanent.main_attributes.each do |attr_name| %>
      <td><%= show_attr(project_type_permanent.public_send attr_name) %></td>
<% end %>

  <td class="index_table-actions">
    <%= link_to_show(project_type_permanent) %>
    <%= link_to_edit(project_type_permanent) %>
<% if project_type_permanent.try(:archived?) %>
    <%= link_to_recover(project_type_permanent) %>
<% else %>
    <%= link_to_destroy(project_type_permanent) %>
<% end %>
  </td>
</tr>
