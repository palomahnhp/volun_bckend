<%= main_title(t("action.show", model: Group.model_name.human)) %>

<dl class="dl-horizontal">

  <dt><%= Group.human_attribute_name(:id) %>:</dt>
  <dd><%= @group.id %></dd>
  <dt><%= Group.human_attribute_name(:name) %>:</dt>
  <dd><%= @group.name %></dd>
  <dt><%= Group.human_attribute_name(:active) %>:</dt>
  <dd><%= t("humanize.#{@group.active}") %></dd>
  <dt><%= Group.human_attribute_name(:created_at) %>:</dt>
  <dd><%= show_simple_date(@group.created_at, format: :long) %></dd>

</dl>
<% unless request.xhr? %>
<%= button_to_back %>
<%= button_to_edit(@group) %>
<% end %>