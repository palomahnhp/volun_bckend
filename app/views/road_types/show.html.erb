<%= main_title(t("action.show", model: RoadType.model_name.human)) %>

<dl class="dl-horizontal">

  <dt><%= RoadType.human_attribute_name(:id) %>:</dt>
  <dd><%= @road_type.id %></dd>
  <dt><%= RoadType.human_attribute_name(:name) %>:</dt>
  <dd><%= @road_type.name %></dd>
  <dt><%= RoadType.human_attribute_name(:code) %>:</dt>
  <dd><%= @road_type.code %></dd>
  <dt><%= RoadType.human_attribute_name(:active) %>:</dt>
  <dd><%= t("humanize.#{@road_type.active}") %></dd>
  <dt><%= RoadType.human_attribute_name(:created_at) %>:</dt>
  <dd><%= show_simple_date(@road_type.created_at) %></dd>

</dl>
<% unless request.xhr? %>
<%= button_to_back %>
<%= button_to_edit(@road_type) %>
<% end %>