<div class="well">
  <%= simple_form_for(@rt_project_subscribe, default_form_options) do |f| %>

  <div class="form-inputs">
          <%= f.input :description %>
          <%= f.association :road_type %>
          <%= f.input :road_name %>
          <%= f.input :number_type %>
          <%= f.input :road_number %>
          <%= f.input :postal_code %>
          <%= f.input :borough %>
          <%= f.association :district %>
          <%= f.input :town %>
          <%= f.association :province %>
          <%= f.input :notes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
</div>