<tr id="<%= dom_id(rt_project_publishing) %>" >

  <% rt_project_publishing.main_attributes.each do |attr_name| %>
  <td><%= show_attr(rt_project_publishing.public_send attr_name) %></td>
  <% end %>

  <td class="index_table-actions">
    <%= link_to_show(rt_project_publishing) %>
    <%= link_to_edit(rt_project_publishing) %>
<% if rt_project_publishing.try(:archived?) %>
    <%= link_to_recover(rt_project_publishing) %>
<% else %>
    <%= link_to_destroy(rt_project_publishing) %>
<% end %>
  </td>
</tr>
