<%= main_title(t("action.show", model: Rt::VolunteerUnsubscribe.model_name.human)) %>
<div class="row">
  <div class="col-md-6">

    <dl class="dl-horizontal well">
      <dt><%= RequestForm.human_attribute_name(:status) %>:</dt>
      <dd>
        <span class="<%= @request_form.status.kind %>">
          <%= @request_form.status %>
        </span>
      </dd>
      <dt><%= RequestForm.human_attribute_name(:user_id) %>:</dt>
      <dd><%= @request_form.user.loggable %> <%= link_to_show(@request_form.user.loggable) %></dd>
      <dt><%= RequestForm.human_attribute_name(:reason) %>:</dt>
      <dd><%= @request_form.reason %></dd>
      <dt><%= RequestForm.human_attribute_name(:comments) %>:</dt>
      <dd><%= @request_form.comments %></dd>
      <dt><%= Rt::VolunteerUnsubscribe.human_attribute_name(:unsubscribe_level) %>:</dt>
      <dd><%= @rt_volunteer_unsubscribe.unsubscribe_level %></dd>
      <% if @rt_volunteer_unsubscribe.unsubscribe_level_is_project %>
        <dt><%= Rt::VolunteerUnsubscribe.human_attribute_name(:project) %>:</dt>
        <dd><%= @rt_volunteer_unsubscribe.project %></dd>
      <% end %>
      <dt><%= Rt::VolunteerUnsubscribe.human_attribute_name(:notes) %>:</dt>
      <dd><%= @rt_volunteer_unsubscribe.notes %></dd>
    </dl>

  </div>
</div>

<%= link_to( t('action.approve'),
            pre_approve_request_form_rt_volunteer_unsubscribe_path,
            data: { confirm: t('messages.confirm_unsubscribe_volunteer') },
            class: 'btn btn-success') %>
<%= link_to( t('action.reject'), pre_reject_request_form_rt_volunteer_unsubscribe_path, class: 'btn btn-danger') %>
<%= link_to( t('mark_as_pending'), mark_request_form_as_pending_rt_volunteer_unsubscribe_path, class: 'btn btn-default') %>



