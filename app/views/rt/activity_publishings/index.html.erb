<% model_class = Rt::ActivityPublishing %>

<div class="row">
  <div class="col-md-12">
    <%= model_title(model_class) %>
  </div>
</div>
<div class="index-panel row well">
  <div class="col-md-12">
    <%= content_tag(:div, search_collection(@search_q, :name_or_organizer_or_description_or_execution_hour_or_road_type_or_road_name_or_number_type_or_road_number_or_postal_code_or_town_or_province_cont), class: 'col-md-4 pull-right') %>
  </div>
</div>

<table class="index-table">
  <thead>
    <tr>
    <% model_class.main_columns.each do |column| -%>
      <th><%= sort_link(@search_q, column, model_class.human_attribute_name(column)) %></th>
    <% end -%>

      <th class="actions index_table-actions">
        <%= t('actions') %>
      </th>
    </tr>
  </thead>
  
  <tbody>
    <%= render(partial: 'rt_activity_publishing', collection: @rt_activity_publishings)%>
  </tbody>
</table>

<%= render partial: "shared/pagination", locals: {collection: @rt_activity_publishings} %>