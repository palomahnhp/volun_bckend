<% request_form = rt_other.request_form %>
<% status       = request_form.status %>

<tr id="<%= dom_id(rt_other) %>" >

  <% rt_other.main_attributes.each do |attr_name| %>
  <td><%= show_attr(rt_other, attr_name) %></td>
  <% end %>

  <td><%= show_attr(request_form, :manager) %></td>
  <td><%= show_attr(request_form, :status_date) %></td>
  <td class="<%= status.kind %>">
    <%= show_attr(status, :kind) %>
  </td>

  <td class="index_table-actions">
    <% if request_form.approved? || request_form.rejected? %>
        <%= link_to_show(rt_other) %>
        <% if request_form.rejected? %>
            <%= link_to_undo_rejection(rt_other) %>
        <% end %>
    <% else %>
        <%= link_to_process(rt_other) %>
    <% end %>
  </td>
</tr>
