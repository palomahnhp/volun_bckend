<div class="well well-form">
  <%= simple_nested_form_for(@rt_entity_subscribe, default_form_options) do |f| %>

      <%= f.simple_fields_for :request_form do |f_request_form|  %>
          <%= render partial: 'request_forms/form_fields', locals: {f: f_request_form } %>
      <% end %>

      <div class="form-inputs">
        <%= render partial: 'form_fields', locals: {f: f } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-success js-confirmable' %>
        <%= link_to build_icon('repeat', text: t('messages.undo_changes')), '', class: 'undo js-reloadable' %>
      </div>

  <% end %>
</div>