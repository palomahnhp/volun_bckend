<div class="well">
  <%= simple_form_for(@rt_activity_subscribe, default_form_options) do |f| %>

  <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :organizer %>
          <%= f.input :description %>
          <%= f.input :execution_date, as: :datepicker %>
          <%= f.input :execution_hour %>
          <%= f.association :road_type %>
          <%= f.input :road_name %>
          <%= f.input :number_type %>
          <%= f.input :road_number %>
          <%= f.input :postal_code %>
          <%= f.input :borough %>
          <%= f.association :district %>
          <%= f.input :town %>
          <%= f.association :province %>
          <%= f.association :project %>
          <%= f.input :notes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
</div>