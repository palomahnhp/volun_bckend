<tr id="<%= dom_id(project) %>" >

<% project.main_attributes.each do |attr_name| %>
    <% attr = project.public_send(attr_name) %>
    <% if attr.is_a?(TrueClass) || attr.is_a?(FalseClass) %>
        <td><%= t("humanize.#{attr}") %></td>
    <% elsif attr.is_a?(Date) %>
        <td><%= show_simple_date(attr) %></td>
    <% else %>
        <td><%= attr %></td>
    <% end %>
<% end %>

  <td><%= show_simple_list(project.districts) %></td>
  <td><%= show_simple_list(project.areas) %></td>
  <td><%= show_simple_list(project.collectives) %></td>

  <td class="index_table-actions">
    <%= link_to_show(project) %>
    <%= link_to_edit(project) %>
<% if project.try(:archived?) %>
    <%= link_to_recover(project) %>
<% else %>
    <%= link_to_destroy(project) %>
<% end %>
  </td>
</tr>
