<% model_class = Project %>

<div class="row">
  <div class="col-md-12">
    <%= model_title(model_class) %>
  </div>
</div>
<div class="index-panel row well">
  <div class="col-md-6">
    <%= content_tag(:div, link_to_new(model_class, path: 'new_options_projects_path'), class: 'col-md-6 pull-left') %>
  </div>
  <div class="col-md-6">
    <%= content_tag(:div, search_collection(@search_q, :name_or_description_cont), class: 'col-md-6 pull-right') %>
  </div>
</div>

<table class="index-table">
  <thead>
  <tr>
    <% model_class.main_columns.each do |column| -%>
        <th><%= sort_link(@search_q, column) %></th>
    <% end -%>

    <th><%= District.model_name.human(count: 2) %></th>
    <th><%= Area.model_name.human(count: 2) %></th>
    <th><%= Collective.model_name.human(count: 2) %></th>

    <th class="actions index_table-actions">
      <%= t('actions') %>
    </th>
  </tr>
  </thead>

  <tbody>
  <%= render(partial: 'project', collection: @projects)%>
  </tbody>
</table>

<%= render partial: "shared/pagination", locals: {collection: @projects} %>