<%= main_title(t("action.show", model: Proposal.model_name.human)) %>

<dl class="dl-horizontal">

  <dt><%= Proposal.human_attribute_name(:id) %>:</dt>
  <dd><%= @proposal.id %></dd>
  <dt><%= Proposal.human_attribute_name(:name) %>:</dt>
  <dd><%= @proposal.name %></dd>
  <dt><%= Proposal.human_attribute_name(:description) %>:</dt>
  <dd><%= @proposal.description %></dd>
  <dt><%= Proposal.human_attribute_name(:active) %>:</dt>
  <dd><%= t("humanize.#{@proposal.active}") %></dd>
  <dt><%= Proposal.human_attribute_name(:created_at) %>:</dt>
  <dd><%= show_simple_date(@proposal.created_at) %></dd>

</dl>
<% unless request.xhr? %>
<%= button_to_back %>
<%= button_to_edit(@proposal) %>
<% end %>