<%= main_title(t("action.show", model: EntityType.model_name.human)) %>

<dl class="dl-horizontal">

  <dt><%= EntityType.human_attribute_name(:id) %>:</dt>
  <dd><%= @entity_type.id %></dd>
  <dt><%= EntityType.human_attribute_name(:kind) %>:</dt>
  <dd><%= @entity_type.kind %></dd>
  <dt><%= EntityType.human_attribute_name(:description) %>:</dt>
  <dd><%= @entity_type.description %></dd>
  <dt><%= EntityType.human_attribute_name(:active) %>:</dt>
  <dd><%= t("humanize.#{@entity_type.active}") %></dd>
  <dt><%= EntityType.human_attribute_name(:created_at) %>:</dt>
  <dd><%= show_simple_date(@entity_type.created_at) %></dd>

</dl>
<% unless request.xhr? %>
<%= button_to_back %>
<%= button_to_edit(@entity_type) %>
<% end %>