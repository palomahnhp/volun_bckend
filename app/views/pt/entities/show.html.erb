<%= main_title(t("action.show", model: Pt::Entity.model_name.human)) %>

<div class="row">
  <div class="col-md-6">
    <h3><%= t('common_fields') %></h3>
    <%= render partial: 'projects/show', locals: { project: @pt_entity.project } %>
  </div>
  <div class="col-md-6">
    <h3><%= t('specific_fields') %></h3>
    <%= render partial: 'show', locals: { pt_entity: @pt_entity } %>
  </div>
</div>

<% unless request.xhr? %>
    <%= button_to_back %>
    <%= button_to_edit(@pt_entity) %>
<% end %>