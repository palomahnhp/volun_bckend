<%= main_title(t("action.show", model: Profile.model_name.human)) %>

<dl class="dl-horizontal">

  <dt><%= Profile.human_attribute_name(:id) %>:</dt>
  <dd><%= @profile.id %></dd>
  <dt><%= Profile.human_attribute_name(:name) %>:</dt>
  <dd><%= @profile.name %></dd>
  <dt><%= Profile.human_attribute_name(:active) %>:</dt>
  <dd><%= t("humanize.#{@profile.active}") %></dd>
  <dt><%= Profile.human_attribute_name(:created_at) %>:</dt>
  <dd><%= show_simple_date(@profile.created_at) %></dd>

</dl>
<% unless request.xhr? %>
<%= button_to_back %>
<%= button_to_edit(@profile) %>
<% end %>