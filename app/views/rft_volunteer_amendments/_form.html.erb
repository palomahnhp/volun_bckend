<div class="well">
  <%= simple_form_for(@rft_volunteer_amendment, default_form_options) do |f| %>

  <div class="form-inputs">
          <%= f.association :request_form_type %>
          <%= f.association :volunteer %>
          <%= f.association :address %>
          <%= f.input :phone_number %>
          <%= f.input :phone_number_alt %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
</div>