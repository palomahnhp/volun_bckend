<%= main_title(t("action.show", model: Issue.model_name.human)) %>

<dl class="dl-horizontal">

  <dt><%= Issue.human_attribute_name(:id) %>:</dt>
  <dd><%= @issue.id %></dd>
  <dt><%= Issue.human_attribute_name(:comments) %>:</dt>
  <dd><%= @issue.comments %></dd>
  <dt><%= Issue.human_attribute_name(:start_date) %>:</dt>
  <dd><%= @issue.start_date %></dd>
  <dt><%= Issue.human_attribute_name(:project_id) %>:</dt>
  <dd><%= @issue.project %></dd>
  <dt><%= Issue.human_attribute_name(:created_at) %>:</dt>
  <dd><%= show_simple_date(@issue.created_at) %></dd>

</dl>
<% unless request.xhr? %>
<%= button_to_back %>
<%= button_to_edit(@issue) %>
<% end %>