<tr id="<%= dom_id(rft_entity_subscribe) %>" >

  <% rft_entity_subscribe.main_attributes.each do |attr_name| %>
  <td><%= show_attr(rft_entity_subscribe.public_send attr_name) %></td>
  <% end %>

  <td class="index_table-actions">
    <%= link_to_show(rft_entity_subscribe) %>
    <%= link_to_edit(rft_entity_subscribe) %>
<% if rft_entity_subscribe.try(:archived?) %>
    <%= link_to_recover(rft_entity_subscribe) %>
<% else %>
    <%= link_to_destroy(rft_entity_subscribe) %>
<% end %>
  </td>
</tr>
