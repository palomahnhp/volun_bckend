<% model_class = RftEntitySubscribe %>

<div class="row">
  <div class="col-md-12">
    <%= model_title(model_class) %>
  </div>
</div>
<div class="index-panel row well">
  <div class="col-md-6">
    <%= content_tag(:div, link_to_new(model_class), class: 'col-md-6 pull-left') %>
  </div>
  <div class="col-md-6">
    <%= content_tag(:div, search_collection(@search_q, :name_or_vat_num_or_email_or_contact_name_or_contact_first_surname_or_contact_second_surname_or_representative_name_or_representative_first_surname_or_representative_second_surname_or_phone_number_or_phone_number_alt_or_road_type_or_road_name_or_number_type_or_road_number_or_postal_code_or_town_or_province_cont), class: 'col-md-6 pull-right') %>
  </div>
</div>

<table class="index-table">
  <thead>
    <tr>
    <% model_class.main_columns.each do |column| -%>
      <th><%= sort_link(@search_q, column) %></th>
    <% end -%>

      <th class="actions index_table-actions">
        <%= t('actions') %>
      </th>
    </tr>
  </thead>
  
  <tbody>
    <%= render(partial: 'rft_entity_subscribe', collection: @rft_entity_subscribes)%>
  </tbody>
</table>

<%= render partial: "shared/pagination", locals: {collection: @rft_entity_subscribes} %>