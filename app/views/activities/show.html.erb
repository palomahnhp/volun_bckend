<%= main_title(t("action.show", model: Activity.model_name.human)) %>

<dl class="dl-horizontal">

  <dt><%= Activity.human_attribute_name(:id) %>:</dt>
  <dd><%= @activity.id %></dd>
  <dt><%= Activity.human_attribute_name(:name) %>:</dt>
  <dd><%= @activity.name %></dd>
  <dt><%= Activity.human_attribute_name(:description) %>:</dt>
  <dd><%= @activity.description %></dd>
  <dt><%= Activity.human_attribute_name(:start_date) %>:</dt>
  <dd><%= @activity.start_date %></dd>
  <dt><%= Activity.human_attribute_name(:end_date) %>:</dt>
  <dd><%= @activity.end_date %></dd>
  <dt><%= Activity.human_attribute_name(:transport) %>:</dt>
  <dd><%= @activity.transport %></dd>
  <dt><%= Activity.human_attribute_name(:pdf_url) %>:</dt>
  <dd><%= @activity.pdf_url %></dd>
  <dt><%= Activity.human_attribute_name(:entity) %>:</dt>
  <dd><%= @activity.entity %></dd>
  <dt><%= Activity.human_attribute_name(:area) %>:</dt>
  <dd><%= @activity.area %></dd>
  <dt><%= Activity.human_attribute_name(:project) %>:</dt>
  <dd><%= @activity.project %></dd>
  <dt><%= Activity.human_attribute_name(:share) %>:</dt>
  <dd><%= t("humanize.#{@activity.share}") %></dd>
  <dt><%= Activity.human_attribute_name(:created_at) %>:</dt>
  <dd><%= show_simple_date(@activity.created_at) %></dd>

</dl>
<% unless request.xhr? %>
<%= button_to_back %>
<%= button_to_edit(@activity) %>
<% end %>