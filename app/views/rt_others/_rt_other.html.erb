<tr id="<%= dom_id(rt_other) %>" >

  <% rt_other.main_attributes.each do |attr_name| %>
  <td><%= show_attr(rt_other.public_send attr_name) %></td>
  <% end %>

  <td class="index_table-actions">
    <%= link_to_show(rt_other) %>
    <%= link_to_edit(rt_other) %>
<% if rt_other.try(:archived?) %>
    <%= link_to_recover(rt_other) %>
<% else %>
    <%= link_to_destroy(rt_other) %>
<% end %>
  </td>
</tr>
