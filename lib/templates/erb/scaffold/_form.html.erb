<%%= simple_form_for(@<%= singular_table_name %>) do |f| %>
<%%= f.error_notification %>

<div class="form-inputs">
  <%- attributes.each do |attr| -%>
      <%%= f.<%= attr.reference? ? :association : :input %> :<%= attr.name %> %>
  <%- end -%>
</div>

<div class="form-actions">
  <%%= f.button :submit %>
</div>
<%% end %>